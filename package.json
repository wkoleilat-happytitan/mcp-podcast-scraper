{
  "name": "mcp-podcast-scraper",
  "version": "1.0.0",
  "description": "MCP server for scraping podcast transcripts. Use with Claude for summarization.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-podcast-scraper": "dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist/ temp/"
  },
  "keywords": [
    "mcp",
    "podcast",
    "transcript",
    "scraper",
    "claude",
    "deepgram"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "rss-parser": "^3.13.0",
    "youtube-dl-exec": "^3.0.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
